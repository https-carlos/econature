<html>

<head>
    <title>Editar Produto</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: #e8f5e9;
            color: #2e7d32;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h2 {
            color: #1b5e20;
            text-align: center;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }

        form {
            max-width: 600px;
            margin: auto;
            background-color: #f1f8e9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        label {
            font-weight: bold;
            display: block;
            margin: 10px 0 5px;
        }

        input,
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 2px solid #81c784;
            border-radius: 4px;
            background-color: #ffffff;
        }

        input:focus,
        textarea:focus,
        select:focus {
            outline: none;
            border-color: #388e3c;
            box-shadow: 0 0 5px #66bb6a;
        }

        button {
            background-color: #66bb6a;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            width: 100%;
        }

        button:hover {
            background-color: #388e3c;
        }
    </style>
</head>

<body>
    <h2>Editar Produto</h2>
    <form action="/produtos/<%= product.id %>/update" method="POST" enctype="multipart/form-data">
        <label for="nome">Nome do Produto:</label>
        <input type="text" id="nome" name="name" value="<%= product.name %>" required><br>

        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="description" required><%= product.description %></textarea><br>

        <label for="preco">Preço:</label>
        <input type="number" id="preco" name="price" value="<%= product.price %>" required><br>

        <label for="categoria">Categoria:</label>
        <input type="text" id="categoria" name="category" value="<%= product.category %>" required><br>

        <label for="imagem">Imagem:</label>
        <input type="file" id="imagem" name="image"><br>

        <label for="doencas">Doenças Relacionadas:</label>
        <select name="doencas" id="doencas" multiple>
            <% doencas.forEach(function(doenca) { %>
                <option value="<%= doenca.id %>" <%=product.doencas.some(d=> d.id === doenca.id) ? 'selected' : '' %> >
                    <%= doenca.name %>
                </option>
                <% }); %>
        </select><br>

        <button type="submit">Salvar Alterações</button>
    </form>
</body>

</html>